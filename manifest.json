{
    "manifest_version": 2,
    "name": "jarvis_program",
    "version": "1.0.0",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "/icon.svg"
        },
        "default_title": "Jarvis",
        "default_popup": "/popup.html"
    },

    "permissions":[
        "activeTab",
        "storage",
        "cookies",
        "scripting"
    ]

}
